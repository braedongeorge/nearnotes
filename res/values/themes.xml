<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:actionModeBackground">@drawable/ab_gradient</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_done</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
         
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:actionModeStyle">@style/myActionMode</item>
        <item name="android:actionModeBackground">@drawable/ab_gradient</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_done</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <item name="android:actionModeCloseButtonStyle">@android:style/Widget.Holo.ActionButton.CloseMode</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>

        
    </style>

    <style name="completion_hint_style">
        <item name="android:drawableRight">@drawable/poweredbygoogleonwhite</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/ab_gradient</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>
    
    
    <style name="myActionMode" parent="android:style/Widget.Holo.ActionMode">
     <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    
    </style>
    

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText" parent="android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <!-- Preferences styles -->
    <style name="PreferencesTheme">
        <item name="android:windowBackground">@color/backgroundDefault</item>
        <item name="android:background">@color/backgroundDefault</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="ActionModeStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionMode.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

</resources>