<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFFFB2">
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
	    <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/location"
			android:gravity="left"
			android:paddingLeft="5dip" 
			android:paddingRight="5dip"
			android:paddingTop="10dip"/>
	    	<LinearLayout android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="right">
			<CheckBox android:id="@+id/checkbox_on_top"
       			android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
       			android:text="@string/on_top"
       	       	android:paddingRight="10dip"
       	       	android:textSize="14sp"/>
		
		</LinearLayout>
	</LinearLayout>
		  
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<ImageView android:id="@+id/location_icon"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:contentDescription="@string/location_icon_desc"
        	android:layout_weight="0"
        	android:src="@drawable/ic_action_place" />
		<ProgressBar android:id="@+id/progressAPI"
        	style="?android:attr/progressBarStyle"
        	android:layout_width="32dip"
        	android:layout_height="32dip" 
        	android:visibility="gone" />
		<com.nearnotes.DelayAutoCompleteTextView
     		android:id="@+id/autoCompleteTextView1"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:ellipsize="end"
      		android:singleLine="true"
      		android:ems="10"
      		android:layout_weight="2">
		</com.nearnotes.DelayAutoCompleteTextView>
 
	</LinearLayout>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/body"
		android:paddingLeft="5dip"
		android:paddingRight="5dip" />
	
	<ScrollView
	    android:layout_width="match_parent" 
	    android:layout_height="match_parent"
	    android:background="@drawable/background">
	
	<EditText android:id="@+id/body" android:layout_width="match_parent"
	    android:paddingLeft="5dip"
	    android:paddingRight="5dip"
		android:layout_height="wrap_content"
		android:background="@drawable/background"
		android:inputType="textMultiLine"
		android:scrollbars="vertical"
		android:gravity="top" />

	</ScrollView>

</LinearLayout>