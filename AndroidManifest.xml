<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nearnotes"
    android:versionCode="3"
    android:versionName="alpha" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:icon="@drawable/icon"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.nearnotes.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.nearnotes.NoteEdit" />
        <activity android:name="com.nearnotes.NoteList" />
        <activity
            android:name="com.nearnotes.NoteSettings"
            android:theme="@style/PreferencesTheme" />
    </application>

</manifest>